<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:id="@+id/txt_feedback_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your feedback"
        android:textSize="@dimen/_18sdp"
        android:textColor="#00587A"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_10sdp"


        />

    <android.support.v7.widget.CardView
        android:id="@+id/txt_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/txt_feedback_note"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <RelativeLayout
            android:id="@+id/your_feedback_R_L"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Image_Icons_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/ic_message_feedback"
                android:elevation="@dimen/_14sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Image_Icons_"
                android:text="Your Feedback"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:elevation="@dimen/_12sdp"/>




            <EditText
                android:id="@+id/EDT_Feedback_"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:textCursorDrawable="@color/colorPrimary"
                android:lines="10"
                android:maxLines="12"
                android:minLines="6"
                android:scrollbars="vertical" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

<RelativeLayout
    android:id="@+id/feedback_R_L"
    android:layout_width="match_parent"
    android:layout_below="@+id/txt_feedback"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/txt_name_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_8sdp"

        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/EDT_name_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:inputType="text"
        android:hint="Your Name"
        android:paddingHorizontal="@dimen/_10sdp"/>


</RelativeLayout>


    </android.support.v7.widget.CardView>





</RelativeLayout>





<RelativeLayout
    android:id="@+id/contact_feedback_R_L"
    android:layout_below="@id/feedback_R_L"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/txt_contact_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EDT_personContact_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:hint="Contact Number"
                android:paddingHorizontal="@dimen/_10sdp"
                />

        </RelativeLayout>




    </android.support.v7.widget.CardView>
</RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:id="@+id/btn_submit"

        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="#0396AB"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_below="@+id/contact_feedback_R_L"
        />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>